{
  "coc.preferences.extensionUpdateCheck": "daily",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "c++", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", ".git/", ".hg/", ".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/.ccls-cache"
        },
        "highlight": {
          "lsRanges": true
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}
